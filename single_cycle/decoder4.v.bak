module decoder4
(
	a,
	out
);

	input [3:0] a;
	output reg [15:0] out;

	always @(*)
	begin
		case (a)
		4'b0001 :
		4'b0010 :
		4'b0011 :
		4'b0100 :
		4'b0101 :
		4'b0110 :
		4'b0111 :
		4'b1000 :
		4'b1001 :
		4'b1010 :
		4'b1011 :
		4'b1100 :
		4'b1101 :
		4'b1110 :
		4'b1111 :
		endcase
	end

endmodule
